#include <iostream>
#include <string>
#include <bits/stdc++.h>
#include <unistd.h>


using namespace std;
const int MAX = 20; 
class Book {
    string name;
    string author;
    string subject;
    int ncopies;
	int accession;
    public: void acceptBookDetails(int &);
            void acceptBookDetails(int &,string,string,string,int);
            void displayBookDetails();
            int nameExists();
            int authorExists();
            int subjectExists();
};
void Book::acceptBookDetails(int &k){
    cout<<"Enter name of book:";
	cin>>name;
	//getline(name);
	cout<<"Enter author name:";
	//cin.ignore('\n');    	
	cin>>author;
	cout<<"Enter subject:";
	//cin.ignore(10);    
	cin>>subject;
	cout<<"No of copies: ";
	cin>>ncopies;
	accession = k;
	k++;
}
void Book::acceptBookDetails(int &k,string bookName, string authorName, string subj, int ncopy){
  	name = bookName;
	author = authorName;
	subject = subj;
	ncopies = ncopy;
	accession = k;
	k++;
}

void Book::displayBookDetails(){
cout<<"===================================\n";
cout<<setw(16)<<"Book name:"<<name<<"\n ";
cout<<setw(16)<<"Author : "<<author<<"\n ";
cout<<setw(16)<<"Subject : "<<subject<<"\n ";
cout<<setw(16)<<"No of Copies: "<<ncopies<<"\n ";
cout<<setw(16)<<"Accession no : "<<accession<<"\n==================================\n";

}
int nameExists(string nM){
	if (strcmp(name,nM)==0)
		return 1;
	return 0;
}
int authorExists(string auTH){
	if (strcmp(author,auTH)==0)
		return 1;
	return 0;
}
int subjectExists(string subJ){
	if (strcmp(subject,subJ)==0)
		return 1;
	return 0;
}
//array functions
//display all books
void displayAllBooks(Book * a, int * n){
	int i = 0;
	while (i++ < *n){
		(*a).displayBookDetails();
		a++;
	}
}
